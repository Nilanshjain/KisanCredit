# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Large binary files
*.pkl filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
